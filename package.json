{
  "name": "soundfield-birds",
  "version": "0.1.0",
  "description": "SoundField: Birds - Audio-first bird sound identification training game",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite --config src/ui-app/vite.config.ts src/ui-app",
    "build": "tsc && vite build --config src/ui-app/vite.config.ts src/ui-app",
    "preview": "vite preview --config src/ui-app/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "deploy": "npm run build && cp dist/index.html dist/404.html && gh-pages -d dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "gh-pages": "^6.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
